<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#444444"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/writeImg"
        android:layout_marginTop="24.3dp"
        android:layout_marginLeft="19.8dp"
        android:layout_width="23.5dp"
        android:layout_height="23.5dp"
        android:src="@drawable/ic_close" />

    <EditText
        android:background="@drawable/ic_kakao"
        android:layout_width="266.3dp"
        android:layout_height="40dp"
        android:hint=""
        android:layout_marginTop="59dp"
        android:layout_gravity="center"
        android:textSize="12dp"


        />
    <EditText
        android:background="@drawable/ic_kakao_copy"
        android:layout_width="266.3dp"
        android:layout_height="40dp"
        android:hint=""
        android:layout_marginTop="11dp"
        android:layout_gravity="center"
        android:textSize="12dp"


        />


    <ImageView
        android:id="@+id/login_btn"
        android:layout_marginTop="27dp"
        android:layout_gravity="center"
        android:layout_width="266.3dp"
        android:layout_height="40dp"
        android:src="@drawable/login_loginbut" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="55dp"
            android:layout_marginLeft="108dp"

            android:layout_width="104dp"
            android:layout_height="15dp"
            android:text="아이디 찾기"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:id="@+id/FindId"
            />

        <TextView
            android:layout_marginTop="55dp"
            android:layout_marginLeft="1dp"
            android:layout_width="104dp"
            android:layout_height="15dp"
            android:text="비밀번호 찾기"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:id="@+id/FindPassword"
            />

    </LinearLayout>

</LinearLayout>
